{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@common": ["./common/*"],
      "@app": ["./app/*"],
      "@components": ["./components/*"],
      "@containers": ["./containers/*"],
      "@context": ["./context/*"],
      "@styles": ["./styles/*"],
      "@services": ["./services/*"],
      "@types": ["./types/*"],
      "@utils": ["./utils/*"],
      "@lib": ["./lib/*"],
      "@hook": ["./hook/*"],
      "@assets": ["./assets/*"]
    },
    "downlevelIteration": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
